<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/view_comic_character_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/view_comic_character_title"
        style="@style/TextStyle_24SP_Bold_White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="8dp"
        android:text="text" />

    <TextView
        android:id="@+id/view_comic_character_description"
        style="@style/TextStyle_16SP_Normal_White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:lines="4"
        android:padding="8dp"
        android:text="text" />

</FrameLayout>